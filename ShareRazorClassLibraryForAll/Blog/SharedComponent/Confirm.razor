@if (Visible)
{
   <div class="confirmation-modal">
    <h3>Confirm Deletion</h3>
    <p>Are you sure you want to delete this card</p>
    <button @onclick="DeleteBlog">Yes</button>
    <button @onclick="CancelDelete">No</button>
</div>
}
@code {
    [Parameter]
    public bool Visible { get; set; }
    [Parameter]
    public EventCallback CancelDeleteClicked { get; set; }
    [Parameter]
    public EventCallback DeleteBlogClicked { get; set; }

    public async void CancelDelete()
    {
        await CancelDeleteClicked.InvokeAsync(true);
    }

    public async void DeleteBlog()
    {
        await DeleteBlogClicked.InvokeAsync();
    }
}
