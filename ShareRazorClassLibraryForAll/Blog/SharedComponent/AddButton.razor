@if (Visible)
{
    <div> <button class="bt btn-primary" @onclick="CreateBlog">Add</button></div>
}

@code {

    [Parameter]
    public bool Visible { get; set; }
    [Parameter]
    public EventCallback CreateBlogClicked { get; set; }

    private async void CreateBlog()
    {
     await   CreateBlogClicked.InvokeAsync();
    }
}
